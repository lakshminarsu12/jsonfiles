{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "TextBlock",
        "text": "Check to see if the power button is pressed. If not, go ahead and press it.",
        "wrap": true,
        "weight": "Bolder",
        "size": "Medium",
        "horizontalAlignment": "Center"
      },
      {
        "type": "Image",
        "url": "URL_TO_YOUR_IMAGE",
        "altText": "Service box showing power button and connections"
      }
    ],
    "actions": [
      {
        "type": "Action.Submit",
        "title": "Next",
        "data": {
          "action": "goToNextStep"
        }
      },
      {
        "type": "Action.Submit",
        "title": "Back",
        "data": {
          "action": "goToPreviousStep"
        }
      }
    ]
  }
  