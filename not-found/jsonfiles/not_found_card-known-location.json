{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "Image",
        "url": "https://via.placeholder.com/200",
        "altText": "Image of service box",
        "horizontalAlignment": "Center"
      },
      {
        "type": "TextBlock",
        "text": "To start, please locate your service box",
        "size": "Medium",
        "weight": "Bolder",
        "horizontalAlignment": "Center",
        "wrap": true
      },
      {
        "type": "TextBlock",
        "text": "Your service box is located in the [living room].",
        "horizontalAlignment": "Center",
        "wrap": true
      }
    ],
    "actions": [
      {
        "type": "Action.Submit",
        "title": "Need help finding it",
        "style": "default"
      },
      {
        "type": "Action.Submit",
        "title": "Found it",
        "style": "positive"
      }
    ]
  }
  