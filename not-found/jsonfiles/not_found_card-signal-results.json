{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "TextBlock",
        "text": "Well done! You've found your service box and it is working properly",
        "size": "Medium",
        "weight": "Bolder",
        "horizontalAlignment": "Center",
        "wrap": true
      },
      {
        "type": "TextBlock",
        "text": "Take a moment to scan your gateway to ensure that it is in proper functioning order",
        "color": "Accent",
        "wrap": true,
        "horizontalAlignment": "Center"
      },
      {
        "type": "Image",
        "url": "https://via.placeholder.com/200",
        "altText": "Image of a service box",
        "horizontalAlignment": "Center"
      }
    ],
    "actions": [
      {
        "type": "Action.Submit",
        "title": "Open Scanner",
        "style": "positive"
      },
      {
        "type": "Action.Submit",
        "title": "Skip",
        "style": "default"
      }
    ]
  }
  