{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "TextBlock",
        "text": "Do you have a black power cable connected to the service box?",
        "size": "Medium",
        "weight": "Bolder",
        "horizontalAlignment": "Center",
        "wrap": true
      },
      {
        "type": "Image",
        "url": "https://via.placeholder.com/200",
        "altText": "Image of a service box with a black power cable",
        "horizontalAlignment": "Center"
      }
    ],
    "actions": [
      {
        "type": "Action.Submit",
        "title": "Yes",
        "style": "positive"
      },
      {
        "type": "Action.Submit",
        "title": "No that I can see",
        "style": "default"
      }
    ]
  }
  