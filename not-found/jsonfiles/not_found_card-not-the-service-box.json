{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "TextBlock",
        "text": "This is your Gateway, please search for your Service Box",
        "size": "Medium",
        "weight": "Bolder",
        "wrap": true,
        "horizontalAlignment": "Center"
      },
      {
        "type": "TextBlock",
        "text": "The service box will look similar to the example below",
        "color": "Accent",
        "wrap": true,
        "horizontalAlignment": "Center"
      },
      {
        "type": "Image",
        "url": "https://via.placeholder.com/200",
        "altText": "Image of a Gateway",
        "horizontalAlignment": "Center"
      }
    ],
    "actions": [
      {
        "type": "Action.Submit",
        "title": "Try again",
        "style": "positive"
      },
      {
        "type": "Action.OpenUrl",
        "title": "We can help",
        "url": "https://support.example.com" // Replace with the actual support URL
      }
    ]
  }
  