{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "Image",
            "url": "data:image/svg+xml;base64,",
            "size": "Medium",
            "horizontalAlignment": "Center"
        },
        {
            "type": "TextBlock",
            "text": "Setup successful!",
            "weight": "Bolder",
            "size": "Medium",
            "horizontalAlignment": "Center",
            "color": "Good"
        },
        {
            "type": "TextBlock",
            "text": "You can now connect your devices.",
            "horizontalAlignment": "Center",
            "spacing": "Small"
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Wi-Fi name",
                    "weight": "Bolder",
                    "spacing": "Medium"
                },
                {
                    "type": "TextBlock",
                    "text": "MattsNetwork",
                    "size": "Medium",
                    "weight": "Bolder",
                    "spacing": "Small"
                },
                {
                    "type": "TextBlock",
                    "text": "Wi-Fi password",
                    "weight": "Bolder",
                    "spacing": "Medium"
                },
                {
                    "type": "TextBlock",
                    "text": "SteveIsAwesome",
                    "size": "Medium",
                    "weight": "Bolder",
                    "spacing": "Small"
                }
            ]
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.OpenUrl",
                    "title": "Share Wi-Fi",
                    "url": "#"
                }
            ]
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Done"
                }
            ]
        }
    ]
}
