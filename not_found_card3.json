{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "TextBlock",
        "text": "Well done! You've found your service box and it is working properly",
        "wrap": true,
        "weight": "Bolder",
        "size": "Medium",
        "horizontalAlignment": "Center"
      },
      {
        "type": "TextBlock",
