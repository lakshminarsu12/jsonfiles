{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "backgroundImage": "BACKGROUND_IMAGE_URL",
  "body": [
    {
      "type": "TextBlock",
      "text": "üîç I'm looking for...",
      "wrap": true,
      "weight": "Bolder",
      "size": "Medium",
      "color": "Light"
    },
    {
      "type": "TextBlock",
      "text": "UPDATES & REMINDERS",
      "wrap": true,
      "weight": "Bolder",
      "size": "Small",
      "color": "Accent"
    },
    {
      "type": "Container",
      "bleed": true,
      "style": "good", 
      "items": [
        {
          "type": "TextBlock",
          "text": "üì¶ Your equipment is on the way",
          "wrap": true,
          "weight": "Bolder",
          "color": "Dark"
        },
        {
          "type": "TextBlock",
          "text": "Estimated delivery: Oct 1 - Oct 5",
          "wrap": true,
          "spacing": "Small",
          "color": "Default"
        }
      ]
    },
    {
      "type": "Container",
      "bleed": true,
      "style": "attention", 
      "items": [
        {
          "type": "Image",
          "url": "URL_TO_YOUR_IMAGE",
          "altText": "Gateway setup image"
        },
        {
          "type": "TextBlock",
          "text": "Let's set up your new (AT&T Internet Air) service",
          "wrap": true,
          "weight": "Bolder",
          "color": "Dark"
        },
        {
          "type": "TextBlock",
          "text": "Setup takes about 20 minutes",
          "wrap": true,
          "spacing": "Small",
          "color": "Default"
        }
      ]
    },
    {
      "type": "Container",
      "bleed": true,
      "style": "warning", 
      "items": [
        {
          "type": "TextBlock",
          "text": "üì¶ Your order's on the way",
          "wrap": true,
          "weight": "Bolder",
          "color": "Dark"
        },
        {
          "type": "TextBlock",
          "text": "Arriving: Oct 8th",
          "wrap": true,
          "spacing": "Small",
          "color": "Default"
        }
      ]
    }
  ]
}
