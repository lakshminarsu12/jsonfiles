{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "Container",
        "items": [
          {
            "type": "TextBlock",
            "text": "Updates & Reminders",
            "size": "Large",
            "weight": "Bolder",
            "wrap": true
          },
          {
            "type": "Container",
            "items": [
              {
                "type": "TextBlock",
                "text": "Your equipment is on the way",
                "weight": "Bolder",
                "wrap": true
              },
              {
                "type": "TextBlock",
                "text": "Estimated delivery: Oct 1 - Oct 5",
                "size": "Small",
                "wrap": true
              }
            ]
          },
          {
            "type": "Container",
            "items": [
              {
                "type": "Image",
                "url": "https://via.placeholder.com/372x168",
                "altText": "FPO - Media",
                "horizontalAlignment": "Center"
              },
              {
                "type": "TextBlock",
                "text": "Let's set up your new (AT&T Internet Air) service",
                "weight": "Bolder",
                "wrap": true
              },
              {
                "type": "TextBlock",
                "text": "Setup takes about 20 minutes",
                "size": "Small",
                "wrap": true
              }
            ]
          },
          {
            "type": "Container",
            "items": [
              {
                "type": "TextBlock",
                "text": "Your order's on the way",
                "weight": "Bolder",
                "wrap": true
              },
              {
                "type": "TextBlock",
                "text": "Arriving Oct 8th",
                "size": "Small",
                "wrap": true
              }
            ]
          }
        ]
      }
    ],
    "backgroundColor": "#E3F2FD",
    "style": "default"
  }
  