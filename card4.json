{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "Image",
        "url": "data:image/png;base64,[BASE64_ENCODED_IMAGE]",
        "altText": "ONT Outlet Placeholder",
        "size": "Medium",
        "horizontalAlignment": "Center"
      },
      {
        "type": "TextBlock",
        "text": "To start, please locate your ONT outlet",
        "weight": "Bolder",
        "size": "Medium",
        "wrap": true,
        "horizontalAlignment": "Center"
      },
      {
        "type": "TextBlock",
        "text": "Your ONT outlet is located in the {living room}.",
        "wrap": true,
        "horizontalAlignment": "Center"
      }
    ],
    "actions": [
      {
        "type": "Action.Submit",
        "title": "Need help finding it"
      },
      {
        "type": "Action.Submit",
        "title": "Found it"
      }
    ]
  }
  