{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "TextBlock",
        "text": "Do you have a black power cable connected to the service box?",
        "wrap": true,
        "weight": "Bolder",
        "size": "Medium",
        "horizontalAlignment": "Center"
      },
      {
        "type": "Image",
        "url": "URL_TO_YOUR_IMAGE",
        "altText": "Image of a service box with a black power cable connected"
      }
    ],
    "actions": [
      {
        "type": "Action.Submit",
        "title": "Yes",
        "data": {
          "action": "blackCableConnected",
          "response": "yes"
        }
      },
      {
        "type": "Action.Submit",
        "title": "No that I can see",
        "data": {
          "action": "blackCableNotConnected",
          "response": "no"
        }
      }
    ]
  }
  