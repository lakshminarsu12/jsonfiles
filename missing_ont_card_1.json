{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "Image",
        "url": "URL_TO_YOUR_IMAGE",
        "altText": "Cable image with text FPO"
      },
      {
        "type": "TextBlock",
        "text": "We apologize for the inconvenience.",
        "wrap": true,
        "weight": "Bolder",
        "size": "Medium"
      },
      {
        "type": "TextBlock",
        "text": "If possible, please empty the box. The cable could have become loose inside the box.",
        "wrap": true,
        "spacing": "Small"
      }
    ],
    "actions": [
      {
        "type": "Action.Submit",
        "title": "Found the cable",
        "data": {
          "action": "foundCable"
        }
      },
      {
        "type": "Action.Submit",
        "title": "Couldn't find the cable",
        "data": {
          "action": "missingCable"
        }
      }
    ]
  }
  