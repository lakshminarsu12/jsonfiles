{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "Image",
        "url": "URL_TO_YOUR_IMAGE",
        "altText": "Unplugged power cable from the wall"
      },
      {
        "type": "TextBlock",
        "text": "Unplug the power supply from the wall and plug it back in after a few seconds",
        "wrap": true,
        "weight": "Bolder",
        "size": "Medium",
        "horizontalAlignment": "Center"
      },
      {
        "type": "TextBlock",
        "text": "Plug the cable in",
        "wrap": true,
        "spacing": "Small",
        "horizontalAlignment": "Center"
      }
    ],
    "actions": [
      {
        "type": "Action.Submit",
        "title": "Next",
        "data": {
          "action": "goToNextStep"
        }
      }
    ]
  }
  