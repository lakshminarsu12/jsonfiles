{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "Image",
        "url": "URL_TO_YOUR_IMAGE",
        "altText": "Back view of the gateway showing the reset button"
      },
      {
        "type": "TextBlock",
        "text": "Press and hold the reset button for 20 seconds",
        "wrap": true,
        "weight": "Bolder",
        "size": "Medium",
        "horizontalAlignment": "Center"
      },
      {
        "type": "TextBlock",
        "text": "Plug the cable in please",
        "wrap": true,
        "spacing": "Small",
        "horizontalAlignment": "Center"
      }
    ],
    "actions": [
      {
        "type": "Action.Submit",
        "title": "Continue",
        "data": {
          "action": "continueAfterReset"
        }
      }
    ]
  }
  