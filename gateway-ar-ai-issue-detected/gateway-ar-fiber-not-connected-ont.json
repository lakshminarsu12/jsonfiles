{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "Image",
        "url": "URL_TO_YOUR_IMAGE",
        "altText": "Back view of the gateway showing an incorrectly connected fiber cable"
      },
      {
        "type": "TextBlock",
        "text": "Looks like the fiber cable is not completely connected",
        "wrap": true,
        "weight": "Bolder",
        "size": "Medium",
        "horizontalAlignment": "Center"
      },
      {
        "type": "TextBlock",
        "text": "Plug the cable in till it makes a light click please",
        "wrap": true,
        "spacing": "Small",
        "horizontalAlignment": "Center"
      }
    ],
    "actions": [
      {
        "type": "Action.Submit",
        "title": "Open Scanner",
        "data": {
          "action": "openScanner"
        }
      },
      {
        "type": "Action.Submit",
        "title": "Skip",
        "data": {
          "action": "skipStep"
        }
      }
    ]
  }
  