{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "Image",
        "url": "https://via.placeholder.com/200",
        "altText": "Image showing power supply being unplugged",
        "horizontalAlignment": "Center"
      },
      {
        "type": "TextBlock",
        "text": "Unplug the power supply from the wall and plug it back in after a few seconds",
        "size": "Medium",
        "weight": "Bolder",
        "horizontalAlignment": "Center",
        "wrap": true
      },
      {
        "type": "TextBlock",
        "text": "Plug the cable in",
        "horizontalAlignment": "Center",
        "wrap": true
      }
    ],
    "actions": [
      {
        "type": "Action.Submit",
        "title": "Next",
        "style": "positive"
      }
    ]
  }
  