{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "TextBlock",
        "text": "Please wait while we let the gateway cool off and rest",
        "size": "Medium",
        "weight": "Bolder",
        "horizontalAlignment": "Center",
        "wrap": true
      },
      {
        "type": "TextBlock",
        "text": "ℹ️ This will take around 10 minutes.",
        "size": "Small",
        "horizontalAlignment": "Center",
        "wrap": true,
        "spacing": "Small"
      },
      {
        "type": "Image",
        "url": "https://via.placeholder.com/200",
        "altText": "Image of a gateway device cooling off",
        "horizontalAlignment": "Center"
      }
    ],
    "actions": [
      {
        "type": "Action.Submit",
        "title": "Open Scanner",
        "style": "positive"
      },
      {
        "type": "Action.Submit",
        "title": "Skip",
        "style": "default"
      }
    ]
  }
  