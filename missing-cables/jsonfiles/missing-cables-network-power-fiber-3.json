{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "Image",
        "url": "https://via.placeholder.com/200",
        "altText": "Image of a power cable",
        "horizontalAlignment": "Center"
      },
      {
        "type": "TextBlock",
        "text": "Let's get you a new power cable.",
        "size": "Medium",
        "weight": "Bolder",
        "horizontalAlignment": "Center",
        "wrap": true
      },
      {
        "type": "TextBlock",
        "text": "One of our agents can help.",
        "horizontalAlignment": "Center",
        "wrap": true
      }
    ],
    "actions": [
      {
        "type": "Action.OpenUrl",
        "title": "Call us",
        "url": "tel:+123456789" // Replace with your actual support phone number
      }
    ]
  }
  