{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "Image",
        "url": "https://via.placeholder.com/200",
        "altText": "Image of a cable",
        "horizontalAlignment": "Center"
      },
      {
        "type": "TextBlock",
        "text": "We apologize for the inconvenience.",
        "size": "Medium",
        "weight": "Bolder",
        "horizontalAlignment": "Center",
        "wrap": true
      },
      {
        "type": "TextBlock",
        "text": "If possible, please empty the box. The cable could have become loose inside the box.",
        "horizontalAlignment": "Center",
        "wrap": true
      }
    ],
    "actions": [
      {
        "type": "Action.Submit",
        "title": "Found the cable",
        "style": "positive"
      },
      {
        "type": "Action.Submit",
        "title": "Couldn't find the cable",
        "style": "default"
      }
    ]
  }
  