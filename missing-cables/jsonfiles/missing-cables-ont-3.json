{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "Container",
        "items": [
          {
            "type": "TextBlock",
            "text": "Call us",
            "size": "Medium",
            "weight": "Bolder",
            "horizontalAlignment": "Center",
            "wrap": true
          }
        ],
        "style": "default",
        "backgroundColor": "#D3D3D3" // Gray background to match the theme
      }
    ],
    "actions": [
      {
        "type": "Action.OpenUrl",
        "title": "NNN.NNN.NNNN", // Replace with your phone number
        "url": "tel:+NNNNNNNNNN" // Replace with the actual phone number for calling
      },
      {
        "type": "Action.Submit",
        "title": "Cancel",
        "style": "default"
      }
    ]
  }
  