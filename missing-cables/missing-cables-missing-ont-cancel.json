{
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "Container",
        "items": [
          {
            "type": "Image",
            "url": "YOUR_IMAGE_URL",  // Replace with the actual URL of the uploaded image
            "size": "Medium",
            "horizontalAlignment": "Center"
          },
          {
            "type": "TextBlock",
            "text": "Call us",
            "wrap": true,
            "weight": "Bolder",
            "size": "Medium",
            "horizontalAlignment": "Center"
          },
          {
            "type": "TextBlock",
            "text": "NNN.NNN.NNNN",
            "wrap": true,
            "spacing": "Small",
            "horizontalAlignment": "Center",
            "color": "Accent"
          }
        ]
      }
    ],
    "actions": [
      {
        "type": "Action.OpenUrl",
        "title": "Call us",
        "url": "tel:NNN.NNN.NNNN"  // Replace with actual support phone number
      },
      {
        "type": "Action.Submit",
        "title": "Cancel"
      }
    ]
  }
  