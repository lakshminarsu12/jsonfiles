{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "Image",
        "url": "data:image/png;base64,[BASE64_ENCODED_IMAGE]",
        "size": "Medium",
        "horizontalAlignment": "Center",
        "altText": "Gateway device"
      },
      {
        "type": "TextBlock",
        "text": "Ready to set up your new {{hardware}}?",
        "wrap": true,
        "weight": "Bolder",
        "size": "Medium",
        "horizontalAlignment": "Center"
      },
      {
        "type": "TextBlock",
        "text": "We’ll help you find the ideal placement for the best signal. Set up takes about 20 min.",
        "wrap": true,
        "spacing": "Small",
        "horizontalAlignment": "Center",
        "isSubtle": true
      }
    ],
    "actions": [
      {
        "type": "Action.Submit",
        "title": "Let’s begin",
        "style": "positive"
      }
    ]
  }
  