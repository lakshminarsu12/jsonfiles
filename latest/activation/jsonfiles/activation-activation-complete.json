{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "Image",
                    "url": "https://example.com/all-fi-hub.png",
                    "size": "Medium",
                    "horizontalAlignment": "Center"
                },
                {
                    "type": "Image",
                    "url": "data:image/svg+xml;base64,",
                    "size": "Small",
                    "horizontalAlignment": "Right"
                }
            ]
        },
        {
            "type": "Container",
            "style": "emphasis",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Activation successful!",
                    "weight": "Bolder",
                    "size": "Medium",
                    "color": "Default"
                },
                {
                    "type": "TextBlock",
                    "text": "You're ready to set up your Wi-Fi.",
                    "isSubtle": true,
                    "wrap": true
                }
            ]
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Set up Wi-Fi",
                    "data": {
                        "action": "setup_wifi"
                    }
                }
            ],
            "horizontalAlignment": "Center"
        }
    ]
}
