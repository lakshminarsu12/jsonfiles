{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "Image",
            "url": "https://example.com/all-fi-hub.png",
            "size": "Medium",
            "horizontalAlignment": "Center"
        },
        {
            "type": "Container",
            "style": "emphasis",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Updating firmware",
                    "weight": "Bolder",
                    "size": "Medium",
                    "horizontalAlignment": "Center"
                },
                {
                    "type": "TextBlock",
                    "text": "About 5 minutes left",
                    "horizontalAlignment": "Center",
                    "isSubtle": true,
                    "wrap": true
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "ProgressBar",
                    "label": "Firmware Update Progress",
                    "value": 0.85,
                    "color": "Accent"
                }
            ]
        }
    ]
}
