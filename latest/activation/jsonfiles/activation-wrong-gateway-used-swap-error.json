{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "Image",
                    "url": "https://example.com/all-fi-hub-error.png",
                    "size": "Medium",
                    "horizontalAlignment": "Center"
                },
                {
                    "type": "Image",
                    "url": "https://example.com/error-icon.png",
                    "size": "Small",
                    "horizontalAlignment": "Right"
                }
            ]
        },
        {
            "type": "Container",
            "style": "emphasis",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "We can’t set up your old equipment",
                    "weight": "Bolder",
                    "size": "Medium",
                    "color": "Attention"
                },
                {
                    "type": "TextBlock",
                    "text": "Let’s set up your new All-Fi Hub with the serial number {{number}}.",
                    "isSubtle": true,
                    "wrap": true,
                    "color": "Accent"
                }
            ]
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Go back",
                    "data": {
                        "action": "go_back"
                    }
                }
            ],
            "horizontalAlignment": "Center"
        }
    ]
}
