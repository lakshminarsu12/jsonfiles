{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.6",
  "body": [
    {
      "type": "Image",
      "url": "https://example.com/green-cable-check.png",
      "altText": "Green connector cable image",
      "horizontalAlignment": "Center",
      "size": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "Well, that’s unexpected",
      "weight": "Bolder",
      "color": "Attention",
      "wrap": true,
      "size": "Large"
    },
    {
      "type": "TextBlock",
      "text": "If possible, try emptying the box—the cable may have gotten loose inside the box.",
      "wrap": true,
      "spacing": "None"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Found the cable",
      "data": {
        "response": "found_green"
      }
    },
    {
      "type": "Action.Submit",
      "title": "Couldn’t find it",
      "data": {
        "response": "not_found_green"
      }
    }
  ]
}
