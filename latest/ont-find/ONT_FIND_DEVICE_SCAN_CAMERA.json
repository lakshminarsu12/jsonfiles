{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.6",
    "type": "AdaptiveCard",
    "id": "ONT_FIND_DEVICE_SCAN_CAMERA",
    "body": [
      {
        "type": "Container",
        "items": [
          {
            "type": "TextBlock",
            "text": "${cameraAccessPermission}",
            "weight": "Bolder",
            "size": "Medium"
          },
          {
            "type": "TextBlock",
            "text": "${allowAccessToCamera}",
            "wrap": true
          },
          {
            "type": "TextBlock",
            "text": "${helpFindTheService}",
            "wrap": true,
            "spacing": "Small"
          }
        ]
      }
    ],
    "actions": [
      {
        "type": "Action.Submit",
        "title": "Don't Allow",
        "data": {
          "action": "deny"
        }
      },
      {
        "type": "Action.Submit",
        "title": "Allow",
        "style": "positive",
        "data": {
          "action": "allow"
        }
      }
    ]
  }
  