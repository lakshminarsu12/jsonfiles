{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.6",
    "id": "ONT_FIND_DEVICE_READY",
    "body": [
      {
        "type": "Container",
        "items": [
          {
            "type": "Image",
            "url": "${appIllustrationImgUrl}",
            "size": "Large",
            "horizontalAlignment": "Left"
          },
          {
            "type": "TextBlock",
            "text": "${yourOutletIsReady}",
            "weight": "Bolder",
            "size": "Medium",
            "color": "Accent"
          },
          {
            "type": "TextBlock",
            "text": "${yourAllFiHubOnTheWay}",
            "isSubtle": true,
            "wrap": true
          },
          {
            "type": "ActionSet",
            "actions": [
              {
                "type": "Action.Submit",
                "title": "Done",
                "style": "button-primary",
                "data": {
                  "action": "complete"
                }
              }
            ]
          }
        ]
      }
    ]
  }
  