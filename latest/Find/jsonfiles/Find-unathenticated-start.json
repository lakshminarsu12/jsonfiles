{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "Image",
            "url": "https://example.com/all-fi-hub.png",
            "size": "Medium",
            "horizontalAlignment": "Center"
        },
        {
            "type": "Container",
            "style": "emphasis",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Let’s set up your new All-Fi Hub",
                    "weight": "Bolder",
                    "size": "Medium",
                    "color": "Accent"
                },
                {
                    "type": "TextBlock",
                    "text": "We’ll help you with placement so you get a good signal.",
                    "isSubtle": true,
                    "wrap": true
                }
            ]
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Let’s go",
                    "data": {
                        "action": "setup"
                    }
                }
            ],
            "horizontalAlignment": "Center"
        }
    ]
}
