{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "TextBlock",
        "text": "Camera permission",
        "size": "Medium",
        "weight": "Bolder",
        "color": "Attention",
        "wrap": true
      },
      {
        "type": "TextBlock",
        "text": "Ask users for camera if we do not already have access.",
        "wrap": true
      },
      {
        "type": "TextBlock",
        "text": "Decline = Close and remain in place\nAllow = Close modal and auto progress to tool",
        "wrap": true
      }
    ],
    "actions": [
      {
        "type": "Action.Submit",
        "title": "Decline",
        "style": "default"
      },
      {
        "type": "Action.Submit",
        "title": "Allow",
        "style": "positive"
      }
    ]
  }
  