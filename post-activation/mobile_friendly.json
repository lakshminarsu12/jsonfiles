        "size": "Small",
        "horizontalAlignment": "Center",
        "height": "40px"
      },
      {
        "type": "TextBlock",
        "text": "Terms & Conditions",
        "weight": "Bolder",
        "size": "Medium",
        "wrap": true,
        "horizontalAlignment": "Center"
      },
      {
        "type": "TextBlock",
        "text": "**You must accept the Terms & Conditions to continue.**",
        "wrap": true,
        "size": "Small",
        "color": "Attention"
      },
      {
        "type": "TextBlock",
        "text": "Order: **#[XXXXXXXX]**",
        "wrap": true,
        "size": "Small"
      },
      {
        "type": "Input.Toggle",
        "id": "terms1",
        "title": "I agree to the [Electronic Delivery of Disclosures](https://www.att.com/).",
