        "wrap": true
      },
      {
        "type": "Input.Toggle",
        "id": "terms2",
        "title": "I agree to the [AT&T Consumer Service Agreement](https://www.att.com/) (includes arbitration and auto-renewal terms).",
        "value": "false",
        "wrap": true
      },
      {
        "type": "Input.Toggle",
        "id": "terms3",
        "title": "I agree to the [wBTC Terms](https://www.att.com/).",
        "value": "false",
        "wrap": true
      },
      {
        "type": "TextBlock",
        "text": "For more details, visit [att.com/broadbandinfo](https://www.att.com/broadbandinfo).",
        "wrap": true,
        "size": "Small",
        "color": "Accent",
        "horizontalAlignment": "Center"
      },
      {
        "type": "ActionSet",
        "actions": [
          {
            "type": "Action.Submit",
            "title": "Agree & Continue",
            "style": "positive"
          },
          {
            "type": "Action.Submit",
            "title": "Cancel",
            "style": "destructive"
          }
        ]
      }
    ]
