{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "TextBlock",
        "text": "Make sure the power cable is securely connected to the wall and service box.",
        "wrap": true,
        "weight": "Bolder",
        "size": "Medium",
        "horizontalAlignment": "Center"
      },
      {
        "type": "TextBlock",
        "text": "Pro tip: attics are too hot for Wi-Fi devices.",
        "wrap": true,
        "spacing": "Small",
        "horizontalAlignment": "Center",
        "color": "Accent"
      },
      {
        "type": "TextBlock",
        "text": "I need more help",
        "wrap": true,
        "color": "Accent",
        "horizontalAlignment": "Left",
        "size": "Small",
        "selectAction": {
          "type": "Action.OpenUrl",
          "url": "HELP_URL"
        }
      },
      {
        "type": "Image",
        "url": "URL_TO_YOUR_IMAGE",
        "altText": "Service box with connected power cable"
      }
    ],
    "actions": [
      {
        "type": "Action.Submit",
        "title": "Next",
        "data": {
          "action": "goToNextStep"
        }
      },
      {
        "type": "Action.Submit",
        "title": "Back",
        "data": {
          "action": "goToPreviousStep"
        }
      }
    ]
  }
  